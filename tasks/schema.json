{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Power Agent Benchmark Task Schema",
  "description": "JSON Schema for validating benchmark tasks",
  "type": "object",
  "required": ["tier", "name", "description", "tasks"],
  "properties": {
    "tier": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4,
      "description": "Tier number (1-4)"
    },
    "name": {
      "type": "string",
      "description": "Human-readable tier name"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the tier"
    },
    "tasks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/task"
      },
      "minItems": 1
    }
  },
  "definitions": {
    "task": {
      "type": "object",
      "required": ["id", "template", "difficulty", "question", "expected_template", "ground_truth", "tolerance", "source", "reference_code"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^t[1-4]-[a-z]+-[0-9]{3}$",
          "description": "Unique task ID (format: t{tier}-{category}-{number})"
        },
        "template": {
          "type": "string",
          "description": "Statistical analysis template category"
        },
        "difficulty": {
          "type": "string",
          "enum": ["basic", "intermediate", "advanced"],
          "description": "Task difficulty level"
        },
        "question": {
          "type": "string",
          "minLength": 20,
          "description": "The power analysis question posed to the agent"
        },
        "expected_template": {
          "type": "string",
          "description": "Expected template the agent should select"
        },
        "ground_truth": {
          "$ref": "#/definitions/ground_truth"
        },
        "tolerance": {
          "$ref": "#/definitions/tolerance"
        },
        "source": {
          "type": "string",
          "description": "Source of ground truth (e.g., 'pwr package CRAN vignette')"
        },
        "reference_code": {
          "type": "string",
          "description": "Reproducible R code that produces the ground truth"
        },
        "reference_code_note": {
          "type": "string",
          "description": "Additional notes about the reference code methodology"
        }
      }
    },
    "ground_truth": {
      "type": "object",
      "description": "Expected numerical results",
      "minProperties": 1,
      "additionalProperties": true,
      "properties": {
        "sample_size": {
          "type": "number",
          "minimum": 1
        },
        "sample_size_per_group": {
          "type": "number",
          "minimum": 1
        },
        "total_sample_size": {
          "type": "number",
          "minimum": 1
        },
        "subjects_per_group": {
          "type": "number",
          "minimum": 1
        },
        "subjects_per_arm": {
          "type": "number",
          "minimum": 1
        },
        "subjects_per_cluster": {
          "type": "number",
          "minimum": 1
        },
        "per_cell": {
          "type": "number",
          "minimum": 1
        },
        "subjects": {
          "type": "number",
          "minimum": 1
        },
        "events": {
          "type": "number",
          "minimum": 1
        },
        "power": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "effect_size_d": {
          "type": "number"
        },
        "effect_size_f": {
          "type": "number",
          "minimum": 0
        },
        "effect_size_w": {
          "type": "number",
          "minimum": 0
        },
        "detectable_effect_d": {
          "type": "number"
        },
        "alpha": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "r2": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "correlation_r": {
          "type": "number",
          "minimum": -1,
          "maximum": 1
        },
        "hazard_ratio": {
          "type": "number",
          "minimum": 0
        },
        "odds_ratio": {
          "type": "number",
          "minimum": 0
        },
        "icc": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "tolerance": {
      "type": "object",
      "description": "Acceptable tolerance for numerical comparisons",
      "minProperties": 1,
      "properties": {
        "sample_size": {
          "type": "number",
          "minimum": 0,
          "description": "Absolute tolerance for sample size"
        },
        "subjects": {
          "type": "number",
          "minimum": 0
        },
        "clusters": {
          "type": "number",
          "minimum": 0
        },
        "events": {
          "type": "number",
          "minimum": 0
        },
        "power": {
          "type": "number",
          "minimum": 0,
          "maximum": 0.2,
          "description": "Absolute tolerance for power (e.g., 0.03 = Â±3%)"
        },
        "effect_size": {
          "type": "number",
          "minimum": 0,
          "description": "Absolute tolerance for effect size"
        }
      }
    }
  }
}
